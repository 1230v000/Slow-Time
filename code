    <script>
        const startOrb = document.getElementById("startOrb");
        const monetBg = document.getElementById("monetBg");
        const content = document.getElementById("content");
        const startTitle = document.getElementById("startTitle");

        const paper = document.getElementById("paper");
        const finalText = document.getElementById("finalText");
        const machine = document.getElementById("machine");
        const keys = document.querySelectorAll('.key');

        const message = "äº²çˆ±çš„æœ‹å‹ï¼Œç¥å¤œå¥½~ğŸ’";
        // 4. å³ä¾§ï¼šä»¥ä»£ç è¡¨è¾¾æ€è€ƒè¿‡ç¨‹
        const codeLines = [
            "def think():",
            "    thoughts = [",
            "        \"åˆåˆ°æ™šä¸Šäº†ï¼Œç™½å¤©å¾ˆå¿™ä¹Ÿæ²¡èŠä»€ä¹ˆè¯é¢˜...\"",
            "        \"æœ€è¿‘å¤©æ°”å˜å‡‰äº†...\"",
            "        \"æ™šä¸Šåƒçš„å¾ˆæ’‘...\"",
            "        \"ä»Šå¤©æ˜¯2026å¹´1æœˆ6å·...\"",
            "        \"æƒ³äº†å¾ˆå¤šï¼Œè¯è¯­æ²¡æœ‰ä»€ä¹ˆå›ºå®šçš„å½¢çŠ¶æƒ³è¦è¯´å‡ºæ¥ï¼Œæƒ³äº†æƒ³è¿˜æ˜¯çŸ­æš‚çš„ä¸€å¥å¤Ÿå•¦ï¼Œé…±\"",
            "    ]",
            "    for t in thoughts:",
            "        print(t)",
        ];

        // 2. å·¦ä¸Šè§’æ‰“å­—é€Ÿåº¦å‡æ…¢ 
        function delayFor(char) {
            if ("ï¼Œã€‚~ğŸ’".includes(char)) return 800; // æ ‡ç‚¹åœé¡¿æ›´é•¿ 
            return 300 + Math.random() * 200; // æ™®é€šå­—æ›´æ…¢ï¼Œæ¨¡ä»¿æ€è€ƒ 
        }

        async function typeAll() {
            for (let i = 0; i < message.length; i++)
            {
                const char = message[i];
                const randomKey = keys[Math.floor(Math.random() * keys.length)];
                randomKey.setAttribute("fill", "#bbb");
                randomKey.setAttribute("transform", "translate(0, 2)");
                paper.textContent += char;
                await new Promise(r => setTimeout(r, delayFor(char)));
                randomKey.setAttribute("fill", "#eee");
                randomKey.setAttribute("transform", "translate(0, 0)");
            }
        }

        async function renderCodeThinking() {
            finalText.textContent = "";
            for (let i = 0; i < codeLines.length; i++)
            {
                finalText.textContent += (i === 0 ? "" : "\n") + codeLines[i];
                await new Promise(r => setTimeout(r, 600));
            }
        }

        startOrb.addEventListener("click", async () => {
            startOrb.style.display = "none";
            startTitle.style.display = "none";
            monetBg.style.opacity = 1;
            content.style.display = "flex";
            await Promise.all([typeAll(), renderCodeThinking()]);
        }); 
    </script>

